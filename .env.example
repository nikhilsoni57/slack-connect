# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://nexecute:password@localhost:5432/nexecute_connect
SHADOW_DATABASE_URL=postgresql://nexecute:password@localhost:5432/nexecute_connect_shadow

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your-32-char-encryption-key-here

# ServiceNow OAuth Configuration
SERVICENOW_CLIENT_ID=
SERVICENOW_CLIENT_SECRET=
SERVICENOW_REDIRECT_URI=http://localhost:3000/auth/servicenow/callback

# Slack OAuth Configuration
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_REDIRECT_URI=http://localhost:3000/auth/slack/callback
SLACK_SIGNING_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# API Configuration
API_VERSION=v1
API_PREFIX=/api